<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_add_cabys" model="ir.ui.view">
        <field name="name">account.move.form.add.cabys</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <!-- Inserta la columna CABYS después del nombre en el árbol de líneas -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <field name="cabys" readonly="1" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
