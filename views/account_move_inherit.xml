<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_move_form_add_facturar_btn" model="ir.ui.view">
    <field name="name">account.move.form.add.facturar.btn</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form/header" position="inside">
        <button
          name="action_open_invoice_preview"
          type="object"
          string="Facturar"
          class="btn-secondary"
          icon="fa-check"
          context="{'save_before_action': True}"
          groups="account.group_account_invoice"/>
      </xpath>
    </field>
  </record>
</odoo>
