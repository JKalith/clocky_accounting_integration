<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--
        Vista heredada de account.move para agregar el botón "Facturar"
        que abre el wizard account.invoice.preview.wizard.

        IMPORTANTE:
        - No redefinimos el <form> completo.
        - Solo usamos un xpath sobre el header de la vista original.
    -->
    <record id="view_move_form_add_facturar_btn" model="ir.ui.view">
        <field name="name">account.move.form.add.facturar.btn</field>
        <field name="model">account.move</field>
        <!-- Heredamos la vista base de facturas/asientos -->
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Insertar nuestro botón después del botón "Confirm" -->
            <xpath expr="//form/header/button[@name='action_post'][@string='Confirm']" position="after">
                <button name="action_open_invoice_preview"
                        string="Facturar"
                        type="object"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>
