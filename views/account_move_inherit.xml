<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista heredada de account.move para agregar el botÃ³n "Facturar" -->
    <record id="view_move_form_add_facturar_btn" model="ir.ui.view">
        <field name="name">account.move.form.add.facturar.btn</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!--
                 OJO: NO usamos @string en el selector.
                 Solo localizamos por name='action_post'.
             -->
            <xpath expr="//form/header/button[@name='action_post']" position="after">
                <button name="action_open_invoice_preview"
                        string="Facturar"
                        type="object"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>
