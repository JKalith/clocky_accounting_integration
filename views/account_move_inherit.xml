<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_move_form_add_facturar_btn" model="ir.ui.view">
    <field name="name">account.move.form.add.facturar.btn</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <!-- Metemos el botón dentro del <header> del formulario -->
      <xpath expr="//header" position="inside">
        <button
          name="action_open_facturar_wizard"
          type="object"
          string="Factura electrónica"
          class="oe_highlight"
          context="{'save_before_action': True}"
          groups="account.group_account_invoice"
        />
      </xpath>
    </field>
  </record>
</odoo>
