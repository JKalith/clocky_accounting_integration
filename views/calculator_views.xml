<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Acción para abrir el wizard -->
    <record id="action_pos_calculator_wizard" model="ir.actions.act_window">
        <field name="name">Calculadora (POS)</field>
        <field name="res_model">pos.calculator.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>

    <!-- Menú dentro de Punto de Venta -->
    <menuitem id="menu_pos_calculator_root"
              name="Calculadora"
              parent="point_of_sale.menu_point_root"
              action="action_pos_calculator_wizard"
              sequence="95"/>

    <!-- Vista Form del wizard -->
    <record id="view_pos_calculator_wizard_form" model="ir.ui.view">
        <field name="name">pos.calculator.wizard.form</field>
        <field name="model">pos.calculator.wizard</field>
        <field name="arch" type="xml">
            <form string="Calculadora básica (POS)" create="false" edit="true">
                <group>
                    <group>
                        <field name="number_a"/>
                        <field name="number_b"/>
                        <field name="operation"/>
                    </group>
                    <group>
                        <field name="result" readonly="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_add"
                            type="object"
                            class="btn-primary"
                            string="Sumar"/>
                    <button name="action_sub"
                            type="object"
                            string="Restar"/>
                    <button name="action_mul"
                            type="object"
                            string="Multiplicar"/>
                    <button name="action_compute"
                            type="object"
                            string="Calcular (según Operación)"/>
                    <button special="cancel" string="Cerrar" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
