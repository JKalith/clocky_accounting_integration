<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- 1) Ya existente: Contactos (base.view_partner_form) -->
    <record id="view_partner_form_cr_activity" model="ir.ui.view">
        <field name="name">res.partner.form.cr.activity</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="codigo_actividad_receptor"/>
            </xpath>
        </field>
    </record>

    <!-- 2) Nuevo: formulario que usa el POS al pulsar DETALLES -->
    <record id="view_partner_form_cr_activity_pos" model="ir.ui.view">
        <field name="name">res.partner.form.cr.activity.pos</field>
        <field name="model">res.partner</field>
  
        <field name="inherit_id" ref="point_of_sale.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="codigo_actividad_receptor"/>
            </xpath>
        </field>
    </record>
</odoo>
