<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- 1) Contactos (backend) -->
    <record id="view_partner_form_cr_activity" model="ir.ui.view">
        <field name="name">res.partner.form.cr.activity</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="codigo_actividad_receptor"/>
            </xpath>
        </field>
    </record>

    <!-- 2) Formulario que usa POS en â€œDETALLESâ€ -->
    <record id="view_partner_form_cr_activity_pos" model="ir.ui.view">
        <field name="name">res.partner.form.cr.activity.pos</field>
        <field name="model">res.partner</field>

        <field name="inherit_id" ref="point_of_sale.view_res_partner_form_pos"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="codigo_actividad_receptor"/>
            </xpath>
        </field>
    </record>
</odoo>
