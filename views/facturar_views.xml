<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_account_invoice_preview_wizard_form" model="ir.ui.view">
    <field name="name">account.invoice.preview.wizard.form</field>
    <field name="model">account.invoice.preview.wizard</field>
    <field name="arch" type="xml">
      <form string="Vista previa de factura" create="false" edit="false">
        <group>
          <group>
            <field name="name"/>
            <field name="partner_name"/>
            <field name="journal_name"/>
            <field name="currency"/>
            <field name="invoice_date"/>
            <field name="invoice_date_due"/>
            <field name="state"/>
          </group>
          <group>
            <field name="amount_untaxed"/>
            <field name="amount_tax"/>
             
            <field name="amount_total"/>
          </group>
        </group>
        <group>
          <field name="lines_html" nolabel="1"/>
        </group>
        <footer>
          <button name="action_post_invoice" type="object" class="btn-primary" string="Confirmar y contabilizar"/>
          <button special="cancel" class="btn-secondary" string="Cerrar"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
