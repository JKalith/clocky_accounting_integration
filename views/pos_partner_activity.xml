<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <templates id="clocky_pos_partner_activity_template" xml:space="preserve">

        <!-- Campo editable en la pantalla de detalles/edición de cliente del POS -->
        <t t-name="ClockyPartnerActivityEdit"
           t-inherit="point_of_sale.PartnerDetailsEdit"
           t-inherit-mode="extension"
           owl="1">

            <!-- Lo metemos en la columna derecha de detalles del cliente -->
            <xpath expr="//div[hasclass('partner-details-right')]" position="inside">
                <div class="partner-detail">
                    <span class="label">Código actividad receptor</span>
                    <input class="detail"
                           name="codigo_actividad_receptor"
                           t-on-change="captureChange"
                           t-att-value="props.partner.codigo_actividad_receptor or ''"
                           placeholder="Código actividad receptor"/>
                </div>
            </xpath>
        </t>

    </templates>
</odoo>
